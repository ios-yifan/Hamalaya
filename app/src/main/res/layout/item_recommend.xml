<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_album_item_bg"
    android:layout_height="75dp">
    <com.androidstudy.himalaya.views.RoundRectImageView
        android:id="@+id/album_cover"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_width="68dp"
        android:layout_height="65dp"/>
    
    <LinearLayout
        android:layout_toRightOf="@+id/album_cover"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/album_title_tv"
            android:text="这个是标题"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/album_subtitle_tv"
            android:text="这个是子标题这个是子标题这个是子标题这个是子标题这个是子标题这个是子标题这个是子标题"
            android:textSize="12sp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="3dp"
            android:textColor="#ff848484"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound"/>
                <TextView
                    android:id="@+id/album_play_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff848484"
                    android:layout_marginLeft="2dp"
                    android:textSize="7sp"
                    android:text="280.5万"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound"/>
                <TextView
                    android:id="@+id/album_content_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff848484"
                    android:textSize="7sp"
                    android:text="23 集"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>